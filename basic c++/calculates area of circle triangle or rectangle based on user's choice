#include <iostream>
using namespace std;

int main()
{
	int s;
	double area,r,l;
	cout << "Enter 1 to find area of circle" << endl << "Enter 2 to find area of rectangle" << endl << "Enter 3 to find area of triangle" << endl;
	cin >> s;
	switch (s)
	{
	case 1:
	{
		cout << "Enter the radius of the circle" << endl;
		cin >> r;
		area = (22 / 7) * r * r;
		cout << "The area of the circle is : " << area;
		break;
	}
	case 2:
	{
		cout << "Enter the length and breadth of the rectangle" << endl;
		cin >> r >> l;
		area = r * l;
		cout << "The area of the rectangle is : " << area;
		break;
	}

	case 3:
	{
		cout << "Enter the base and height of the triangle" << endl;
		cin >> r >> l;
		area = 0.5 * r * l;
		cout << "The area of triangle is : " << area;
		break;
	}
	}
}
